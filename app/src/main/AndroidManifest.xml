<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trackingmypantry">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />



    <application
        android:extractNativeLibs="false"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrackingMyPantry">
        <activity android:name="trackingmypantry.Pantry"
            android:screenOrientation="portrait"/>
        <activity android:name="trackingmypantry.Register"
            android:screenOrientation="portrait"/>
        <activity android:name="trackingmypantry.Login"
            android:screenOrientation="portrait"/>
        <activity android:name="trackingmypantry.Products"
            android:screenOrientation="portrait"/>
        <activity android:name="trackingmypantry.CreateProduct"
            android:screenOrientation="portrait"/>
        <activity android:name="trackingmypantry.LocalDBProducts"
            android:screenOrientation="portrait"/>
        <activity android:name="trackingmypantry.MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>